#!/bin/sh

cd /home/projects/build/bin/build-scripts

case $1 in
   "pen" | "plugins" | "sim" | "tedit" | "kick")
       ./$1 $2 $3
   ;;

   *)
      echo "Usage: build project [options]"
      echo
      echo "Projects:"
      echo "pen       plugins        sim"
      echo "tedit     kick"
   ;;
esac

