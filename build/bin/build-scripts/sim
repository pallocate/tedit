#!/bin/sh

cd /home/projects/sim/sim

task="compile"
if [ $1 ]; then
   task=$1
fi

DEPENDENCIES=$COROUTINES:$KROTO_COROUTINES:$GRPC_PROTOBUF:$GRPC_CONTEXT:$GRPC_CORE:$GRPC_STUB:$GRPC_API:$GUAVA:$GRPC_NETTY_SHADED:\
$GRPC_PROTOBUF_LITE:$PROTOBUF_JAVA:$PERFMARK:$PROTOCOL:$PEN:$PEN_TESTS:$KICK:$JNA:$APACHE_COMMON:$IROHA_ED25519

if [ $task = "compile" ]; then
   kotlinc -d $SIM -cp $DEPENDENCIES src

elif [ $task = "run" ]; then
   kotlin -cp $SIM:$DEPENDENCIES:$SERIAL_RUN sim.Main $2

elif [ $task = "docs" ]; then
   java -cp $STDLIB:$DEPENDENCIES -jar $DOKKA src -output build/docs/sim/api

else
   echo "Usage: build sim [compile|run|docs]"; echo

fi
